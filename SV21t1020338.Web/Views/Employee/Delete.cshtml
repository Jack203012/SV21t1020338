 @model Employee
@{
    ViewBag.Title = "Xoá Nhân Viên";
   
}
<div class="box box-danger">
    <div class="box-body">
        <form class="form-horizontal" method="post" enctype="multipart/form-data" action="~/Employee/Delete/@Model.EmployeeID">
            <div class="form-group">
                <label class="control-label col-sm-2">Họ và tên:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.FullName</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ngày sinh:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.BirthDate.ToShortDateString()</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Điện thoại:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Phone</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Email:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Email</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Trạng thái:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@(Model.IsWorking ? "Đang làm việc" : "Đã nghỉ làm")</p>
                </div>
            </div>
            <input type="hidden" name="PhotoPath" value="@Model.Photo" />
            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh cá nhân:</label>
                <div class="col-lg-offset-2 col-sm-10">
                    <img id="Photo" src="~/images/employees/@Model.Photo" class="img img-bordered" width="150px" height="150px" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-20">
                    @if (ViewBag.AllowDelete)
                    {
                        <button type="submit" class="btn btn-danger">
                            <i class="fa fa-trash"></i>
                            Xoá Nhân Viên
                        </button>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-danger" disabled>
                            Không Thể Xoá Nhân Viên Này
                        </button>
                    }
                    <a href="~/Employee" class="btn btn-default">
                        Quay lại
                    </a>
                </div>
            </div>

        </form>

    </div>
</div>
