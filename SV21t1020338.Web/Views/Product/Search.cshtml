@model ProductSearchResult
@{
    Layout = null;
}

<p>
    Có <strong>@Model.RowCount</strong> mặt hàng trong tổng số <strong>@Model.PageCount</strong> trang
</p>
<div class="table-responsive">
    <table class="table table-bordered table-hover table-striped">
        <thread>
            <tr class="bg-primary" style="background-color: #339ab1">
                <th>Ảnh</th>
                <th style="width:auto">Tên Mặt Hàng</th>
                <th style="width:auto">Đơn vị tính</th>
                <th style="width:auto">Giá</th>
                <th style="width: 80px;">Thao tác</th>
            </tr>
        </thread>
        <tbody>
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td style="width: 110px"><img class="img-responsive" src="~/images/Products/@item.Photo" style="width:100px; height:100px"></td>
                    <td style="width:auto">@item.ProductName</td>
                    <td style="width:auto">@item.Unit</td>
                    <td style="width:auto">@item.Price.ToString("N0")</td>
                    <td class="text-right">
                        <a href="~/Product/Edit/@item.ProductID" class="btn btn-primary btn-xs">
                            <i class="fa fa-pencil"></i>
                        </a>
                        <a href="~/Product/Delete/@item.ProductID" class="btn btn-danger btn-xs">
                            <i class="fa fa-trash"></i>
                        </a>

                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>
<div class="text-center">
    <ul class="pagination">
        @for (int i = 1; i < Model.PageCount + 1; i++)
        {
            if (i == Model.Page)
            {
                <li class="active"><a href="#">@i</a></li>
            }
            else
            {
                <li><a href="~/Product?page=@i&CategoryID=@Model.CategoryID&SupplierID=@Model.SupplierID&MinPrice=@Model.MinPrice&MaxPrice=@Model.MaxPrice&SearchValue=@Model.SearchValue">@i</a></li>
            }
        }
    </ul>
</div>