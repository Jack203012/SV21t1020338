@using SV21t1020338.BusinessLayers
@model SV21t1020338.DomainModels.Customer
@{
}
<div class="box box-primary">
    <div class="box-body">
        <form action="~/Customer/Save" method="post">
            <input type="hidden" name="@nameof(Model.CustomerId)" value="@Model.CustomerId"></input>
            <div class="form-group">
                <label>Tên khách hàng</label>
                <input type="text" class="form-control" name="@nameof(Model.CustomerName)" value="@Model.CustomerName" />
                @Html.ValidationMessage(nameof(Model.CustomerName))
            </div>

            <div class="form-group">
                <label>Tên giao dịch</label>
                <input type="text" class="form-control" name="@nameof(Model.ContactName)" value="@Model.ContactName"/>
                @Html.ValidationMessage(nameof(Model.ContactName))
            </div>

            <div class="form-group">
                <label>Điện Thoại</label>
                <input type="text" class="form-control" name="@nameof(Model.Phone)" value="@Model.Phone" />
            </div>

            <div class="form-group">
                <label>Email</label>
                <input type="text" class="form-control" name="@nameof(Model.Email)" value="@Model.Email"/>
            </div>

            <div class="form-group">
                <label>Địa chỉ</label>
                <input type="text" class="form-control" name="@nameof(Model.Address)" value="@Model.Address"/>
            </div>

            <div class="form-group">
                <label>Tỉnh thành</label>
                <select class="form-control select2" name="@nameof(Model.Province)">
                    <option value="" >>-- Chọn tỉnh/thành --<</option>
                    @foreach (var province in CommonDataService.GetProvinceList())
                    {
                        if(province.ProvinceName == Model.Province)
                        {
                            <option value="@province.ProvinceName" selected>@province.ProvinceName</option>
                        }
                        else
                        {
                            <option value="@province.ProvinceName">@province.ProvinceName</option>
                        }
                    }
                    @Html.ValidationMessageFor(m => m.Province)
                </select>
            </div>

            <div class="form-group">
                <label>Trạng thái</label>
                <select class="form-control" name="@nameof(Model.IsLocked)">
                    @if(Model.IsLocked)
                    {
                        <option value="false">Khách không bị khóa</option>
                        <option value="true" selected>Khách bị khóa</option>
                    }
                    else
                    {
                        <option value="false" selected>Khách không bị khóa</option>
                        <option value="true">Khách bị khóa</option>
                    }

                </select>
            </div>

            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floopy-o"></i>
                    Lưu Dữ Liệu
                </button>
                <a href="~/Customer" class="btn btn-default">
                    Quay Lại
                </a>
            </div>
           
        </form>
    </div>
</div>