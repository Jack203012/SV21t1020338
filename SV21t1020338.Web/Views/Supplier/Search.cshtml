@model SupplierSearchResult
@{
    Layout = null;
}
<p style="margin:10px 0 10px 0">
    Có <strong>@Model.RowCount</strong> nhà cung cấp trong tổng số <strong>@Model.PageCount</strong> trang
</p>

<div class="table-responsive">
    <table class="table table-bordered table-hover table-striped">
        <thread>
            <tr class="bg-primary" style="background-color: #339ab1">
                <th>Logo</th>
                <th>Tên loại hàng</th>
                <th>Tên liên lạc</th>
                <th>Điện thoại</th>
                <th>Email</th>
                <th>Địa chỉ</th>
                <th>Tinh thành</th>
                <th style="width: 80px;">Thao tác</th>  
            </tr>
        </thread>
        <tbody>
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td style="width: 110px"><img class="img-responsive" src="~/images/suppliers/@item.Photo" style="width:100px; height:100px"></td>
                    <td>@item.SupplierName</td>
                    <td>@item.ContactName</td>
                    <td>@item.Phone</td>
                    <td>@item.Email</td>
                    <td>@item.Address</td>
                    <td>@item.Province</td>
                    <td>

                        <a href="~/Supplier/Edit/@item.SupplierID" class="btn btn-primary btn-xs">
                            <i class="fa fa-pencil"></i>
                        </a>
                        <a href="~/Supplier/Delete/@item.SupplierID" class="btn btn-danger btn-xs">
                            <i class="fa fa-trash"></i>
                        </a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (Model.PageCount > 1)
{
    <div class="text-center">
        <ul class="pagination">
            @for (int p = 1; p <= Model.PageCount; p++)
            {
                if (p == Model.Page)
                {
                    <li class="active"><a href="#">@p</a></li>
                }
                else
                {
                    <li><a href="javascript:;" onclick="paginationSearch('#formSearch',@p)">@p</a></li>
                }
            }
        </ul>
    </div>
}
